{
  "name": "semanthicc-armada",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "bun --filter '@semanthicc/dashboard' dev",
    "dev:all": "bun --filter '*' dev",
    "build": "bun --filter '*' build",
    "build:compass": "bun --filter '@semanthicc/compass' build",
    "build:captain": "bun --filter '@semanthicc/captain' build",
    "build:dashboard": "bun --filter '@semanthicc/dashboard' build",
    "check": "bun --filter '*' check",
    "check:dashboard": "bun --filter '@semanthicc/dashboard' check",
    "typecheck": "tsc --noEmit",
    "lint": "bun --filter '*' lint",
    "prepare": "husky"
  },
  "devDependencies": {
    "typescript": "^5"
  }
}
