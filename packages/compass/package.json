{
  "name": "@semanthicc/compass",
  "version": "1.6.0",
  "description": "Semantic memory and heuristics for OpenCode - least tokens, most mistake prevention",
  "module": "src/index.ts",
  "main": "src/index.ts",
  "types": "src/index.ts",
  "type": "module",
  "exports": {
    ".": {
      "import": "./src/index.ts",
      "types": "./src/index.ts"
    }
  },
  "scripts": {
    "build": "bun run build:dashboard && bun run build:main",
    "build:main": "bun build src/index.ts --outdir dist --target bun --external @xenova/transformers",
    "build:dashboard": "cd src/dashboard/ui && vite build",
    "build:all": "bun run check:all && bun run build",
    "test": "bun test src/",
    "dev": "bun run src/index.ts",
    "dashboard:dev": "cd src/dashboard/ui && vite dev --host",
    "check": "tsc --noEmit",
    "check:all": "bun run check && bun run check:dashboard && bun run check:build",
    "check:dashboard": "cd src/dashboard/ui && bunx svelte-check --tsconfig ./tsconfig.json",
    "check:build": "cd src/dashboard/ui && vite build --mode development",
    "typecheck": "tsc --noEmit",
    "typecheck:dashboard": "cd src/dashboard/ui && svelte-check",
    "ci": "bun run check:all && bun run build && bun run test"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "typescript": "^5.9.3",
    "vite": "^5.4.21",
    "svelte": "^5.46.1",
    "@sveltejs/vite-plugin-svelte": "^4.0.4"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "keywords": [
    "opencode",
    "plugin",
    "memory",
    "heuristics",
    "semantic-search",
    "ai-coding"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@google/genai": "^1.34.0",
    "@lancedb/lancedb": "^0.23.0",
    "@opencode-ai/plugin": "^1.0.224",
    "@xenova/transformers": "^2.17.2",
    "code-chunk-fork": "0.2.1",
    "p-limit": "^7.2.0"
  }
}
