{
  "name": "@semanthicc/compass",
  "version": "1.6.0",
  "description": "Semantic memory and heuristics for OpenCode - least tokens, most mistake prevention",
  "module": "src/index.ts",
  "main": "src/index.ts",
  "types": "src/index.ts",
  "type": "module",
  "exports": {
    ".": {
      "import": "./src/index.ts",
      "types": "./src/index.ts"
    }
  },
  "scripts": {
    "build": "bun run build:main",
    "build:main": "bun build src/index.ts --outdir dist --target bun --external @xenova/transformers",
    "test": "bun test src/",
    "dev": "bun run src/index.ts",
    "check": "tsc --noEmit",
    "typecheck": "tsc --noEmit",
    "ci": "bun run check && bun run build && bun run test"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "typescript": "^5.9.3"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "keywords": [
    "opencode",
    "plugin",
    "memory",
    "heuristics",
    "semantic-search",
    "ai-coding"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@google/genai": "^1.34.0",
    "@lancedb/lancedb": "^0.23.0",
    "@opencode-ai/plugin": "^1.0.224",
    "@xenova/transformers": "^2.17.2",
    "code-chunk-fork": "0.2.1",
    "p-limit": "^7.2.0"
  }
}
